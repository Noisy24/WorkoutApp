            <Label prefHeight="25.0" prefWidth="158.0" text="Тип тренировки">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <TextField fx:id="workoutType" prefHeight="25.0" prefWidth="163.0" text="название" />
         </children>
      </HBox>
      <HBox layoutX="14.0" layoutY="164.0" prefHeight="25.0" prefWidth="320.0">
         <children>
            <Label prefHeight="25.0" prefWidth="158.0" text="Упражнение">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <TextField fx:id="name" prefHeight="25.0" prefWidth="163.0" text="название" />
         </children>
      </HBox>
      <HBox layoutX="14.0" layoutY="213.0" prefHeight="25.0" prefWidth="320.0">
         <children>
            <Label prefHeight="25.0" prefWidth="158.0" text="Кол-во подходов">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <TextField fx:id="sets" prefHeight="25.0" prefWidth="164.0" text="число" />
         </children>
      </HBox>
      <HBox layoutX="14.0" layoutY="263.0" prefHeight="25.0" prefWidth="320.0">
         <children>
            <Label prefHeight="25.0" prefWidth="158.0" text="Кол-во повторений">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <TextField fx:id="reps" prefHeight="25.0" prefWidth="168.0" text="число" />
         </children>
      </HBox>
      <HBox layoutX="14.0" layoutY="312.0" prefHeight="25.0" prefWidth="320.0">
         <children>
            <Label prefHeight="25.0" prefWidth="158.0" text="Вес (кг)">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <TextField fx:id="weight" prefHeight="25.0" prefWidth="166.0" text="число" />
         </children>
      </HBox>
      <VBox layoutX="461.0" layoutY="263.0" prefHeight="77.0" prefWidth="187.0">
         <children>
            <Button mnemonicParsing="false" onAction="#addExercise" prefHeight="25.0" prefWidth="189.0" text="Добавить упражнение" />
            <Button mnemonicParsing="false" onAction="#delExercise" prefHeight="25.0" prefWidth="187.0" text="Удалить упражнение" />
            <Button mnemonicParsing="false" onAction="#saveWorkout" prefHeight="25.0" prefWidth="194.0" text="Сохранить тренировку" />
         </children>
      </VBox>
      <TableView fx:id="exerciseTable" editable="true" layoutX="359.0" layoutY="14.0" prefHeight="225.0" prefWidth="390.0">
        <columns>
          <TableColumn fx:id="nameCol" prefWidth="99.0" text="Упражнение" />
          <TableColumn fx:id="setsCol" prefWidth="114.0" text="Кол-во подходов" />
            <TableColumn fx:id="repsCol" prefWidth="120.0" text="Кол-во повторений" />
            <TableColumn fx:id="weightCol" prefWidth="56.0" text="Вес (кг)" />
        </columns>
      </TableView>
   </children>
