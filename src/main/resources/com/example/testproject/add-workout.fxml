<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="770.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.testproject.AddWorkout">
   <children>
      <HBox layoutX="14.0" layoutY="14.0" prefHeight="25.0" prefWidth="320.0">
         <children>
            <Label prefHeight="25.0" prefWidth="158.0" text="Дата тренировки">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <DatePicker fx:id="datePicker" prefHeight="25.0" prefWidth="167.0" />
         </children>
      </HBox>
      <HBox layoutX="14.0" layoutY="64.0" prefHeight="25.0" prefWidth="320.0">
